@model Dapper.Data.Models.Domain.TaskDetailRequestModel
@{
}

<h3>Update Task Detail</h3>

<a href="/Task/DisplayAllTasks" class="my-2 btn btn-primary">Display All Task</a>

<form asp-action="UpdateTask">
    <input asp-for="Id" type="hidden" class="form-control">

    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" type="text" class="form-control">
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" type="text" class="form-control">
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label">Status</label>
        <select asp-for="Status" class="form-control" id="statusDropdown">
            <option value="Pending">Pending</option>
            <option value="In Progress">In Progress</option>
            <option value="Completed">Completed</option>
        </select>
        <span class="text-danger" asp-validation-for="Status"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CreatedAt" class="form-label">CreatedAt</label>
        <input asp-for="CreatedAt" type="text" class="form-control">
        <span class="text-danger" asp-validation-for="CreatedAt"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DueDate" class="form-label">DueDate</label>
        <input asp-for="DueDate" type="text" class="form-control">
        <span class="text-danger" asp-validation-for="DueDate"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Priority" class="form-label">Priority</label>
        <select asp-for="Priority" class="form-control" id="priorityDropdown">
            <option value="High">High</option>
            <option value="Medium">Medium</option>
            <option value="Low">Low</option>
        </select>
        <span class="text-danger" asp-validation-for="Status"></span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="mb-3">
            @TempData["msg"]
        </div>
    }

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>